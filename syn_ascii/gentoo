#!/bin/bash

# Gentoo
col1=$(tput setaf 5) #magenta
#col2=$(tput setaf 8) #lightblack #original
col2=$(tput setaf 7)
col3=$(tput setaf 8)
rst=$(tput sgr0)
s=$(echo "\\")

cat <<EOF
$col1

    ,. ----.,     $col2                   _                 _ _$col1
   ,.   __   '*   $col2  ____  ____ _ __ | |_  ___   ___   | (_)_ __  _   _ _  __$col3 TM$col1
  :    '__"    ^: $col2 /    |/  _ | '_ \|  _|/ _ \ / _ \  | | | '_ \| | | | \/ /$col1
   \            ,'$col2 |_(| |  (__| | | | |_| |_| | |_| | | | | | | | |_| |>  <$col1
   .'         ./  $col2  __| |\____|_| |_|___|\___/ \___/  |_|_|_| |_|\__,_|_/\_$s$col1
 ./        ,./'   $col2 |____|$col1
  ". __/.'^
$rst
EOF


#    ,. ----.,                        _                 _ _
#   ,.   __   '*     ____  ____ _ __ | |_  ___   ___   | (_)_ __  _   _ _  __
#  :    '__"    ^:  /    |/  _ | '_ \|  _|/ _ \ / _ \  | | | '_ \| | | | \/ /
#   \            ,' |_(| |  (__| | | | |_| |_| | |_| | | | | | | | |_| |>  <
#   .'         ./    __| |\____|_| |_|___|\___/ \___/  |_|_|_| |_|\__,_|_/\_\
# ./        ,./'    |____|
#  ". __/.'^

